{% extends 'base.html.twig' %}

{% block title %}new Experience!{% endblock %}

{% block body %}
    <!-- start banner Area -->
    <section class="banner-area relative" id="home">
        <div class="overlay overlay-bg"></div>
        <div class="container">
            <div class="row d-flex align-items-center justify-content-center">
                <div class="about-content col-lg-12">
                    <h1 class="text-white">
                        add Experience
                    </h1>
                    <p class="text-white link-nav"><a href="index.html">Home </a>  <span class="lnr lnr-arrow-right"></span>  <a href="single.html"> Job Details</a></p>
                </div>
            </div>
        </div>
    </section>
    <!-- End banner Area -->


    <!-- Start contact-page Area -->
    <section class="contact-page-area section-gap">
        <div class="container">
            <div class="row card card-footer">



                <div class="col-lg-8">
                    <h1>new Experience</h1> <br>
                    {{ form_start(form, {'attr': {'class': 'form-area'}}) }}
                    <div class="row">
                        <div class="col-lg-9 form-group">



                            {{ form_label(form.companyName) }}
                            {{ form_widget(form.companyName ,{'attr': {'class': 'common-input mb-20 form-control'}}) }}
                            {{ form_help(form.companyName) }}
                            {{ form_errors(form.companyName) }}


                            {{ form_label(form.JobTitle) }}
                            {{ form_widget(form.JobTitle ,{'attr': {'class': 'common-input mb-20 form-control'}}) }}
                            {{ form_help(form.JobTitle) }}
                            {{ form_errors(form.JobTitle) }}


                            {{ form_label(form.periodeAt) }}
                            {{ form_widget(form.periodeAt,{'attr': {'class': 'common-input mb-20 form-control'}}) }}
                            {{ form_help(form.periodeAt) }}
                            {{ form_errors(form.periodeAt) }}


                            {{ form_label(form.description) }}
                            {{ form_widget(form.description ,{'attr': {'class': 'common-input mb-20 '}}) }}
                            {{ form_help(form.description) }}
                            {{ form_errors(form.description) }}

                            {{ form_label(form.ville )}}
                            {{ form_widget(form.ville,{'attr': {'class': 'common-input mb-20 form-control'}}) }}
                            {{ form_help(form.ville) }}
                            {{ form_errors(form.ville) }}



                            <button class="primary-btn mt-20 text-white" style="float: right;">edit</button>
                            <div class="mt-20 alert-msg" style="text-align: left;"></div>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
    <!-- End contact-page Area -->
{% endblock %}

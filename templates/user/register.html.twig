{% extends 'base.html.twig' %}


{% block title %}register!{% endblock %}


{% block body %}

    <!-- start banner Area -->
    <section class="banner-area relative" id="home">
        <div class="overlay overlay-bg"></div>
        <div class="container">
            <div class="row d-flex align-items-center justify-content-center">
                <div class="about-content col-lg-12">
                    <h1 class="text-white">
                        Registration
                    </h1>
                    <p class="text-white link-nav"><a href="index.html">Home </a>  <span class="lnr lnr-arrow-right"></span>  <a href="single.html"> Job Details</a></p>
                </div>
            </div>
        </div>
    </section>
    <!-- End banner Area -->



    <!-- Start contact-page Area -->
    <section class="contact-page-area section-gap">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 d-flex flex-column">
                    <a class="contact-btns" href="#">Submit Your CV</a>
                    <a class="contact-btns" href="#">Post New Job</a>
                </div>


                <div class="col-lg-8">
                    <h1>Regestration</h1> <br>
                    {{ form_start(registrationForm, {'attr': {'class': 'form-area'}}) }}
                        <div class="row">
                            <div class="col-lg-10 form-group">
                                {{ form_label(registrationForm.firstName) }}
                                {{ form_widget(registrationForm.firstName, {'attr': {'class': 'common-input mb-20 form-control'}}) }}
                                {{ form_help(registrationForm.firstName) }}
                                {{ form_errors(registrationForm.firstName) }}


                                {{ form_label(registrationForm.lastName) }}
                                {{ form_widget(registrationForm.lastName, {'attr': {'class': 'common-input mb-20 form-control'}}) }}
                                {{ form_help(registrationForm.lastName) }}
                                {{ form_errors(registrationForm.lastName) }}


                                {{ form_label(registrationForm.email) }}
                                {{ form_widget(registrationForm.email, {'attr': {'class': 'common-input mb-20 form-control'}}) }}
                                {{ form_help(registrationForm.email) }}
                                {{ form_errors(registrationForm.email) }}

                                {{ form_label(registrationForm.plainPassword) }}
                                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'common-input mb-20 form-control'}}) }}
                                {{ form_help(registrationForm.plainPassword) }}
                                {{ form_errors(registrationForm.plainPassword) }}

                                {{ form_label(registrationForm.phone) }}
                                {{ form_widget(registrationForm.phone, {'attr': {'class': 'common-input mb-20 form-control'}}) }}
                                {{ form_help(registrationForm.phone) }}
                                {{ form_errors(registrationForm.phone) }}

                                {{ form_label(registrationForm.adresse) }}
                                {{ form_widget(registrationForm.adresse, {'attr': {'class': 'common-input mb-20 form-control'}}) }}
                                {{ form_help(registrationForm.adresse) }}
                                {{ form_errors(registrationForm.adresse) }}

                                {{ form_label(registrationForm.roles) }}
                                {{ form_widget(registrationForm.roles, {'attr': {'class': 'common-input mb-20 form-control'}}) }}
                                {{ form_help(registrationForm.roles) }}
                                {{ form_errors(registrationForm.roles) }}


                                {{ form_label(registrationForm.agreeTerms) }}
                                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'common-input mb-20 form-control'}}) }}
                                {{ form_help(registrationForm.agreeTerms) }}
                                {{ form_errors(registrationForm.agreeTerms) }}


                                <button class="primary-btn mt-20 text-white" style="float: right;">Register</button>
                                <div class="mt-20 alert-msg" style="text-align: left;"></div>
                            </div>
                        </div>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </section>
    <!-- End contact-page Area -->


{% endblock %}
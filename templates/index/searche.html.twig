{% extends 'base.html.twig' %}

{% block body %}
    <!-- start banner Area -->
    <section class="banner-area relative" id="home">
        <div class="overlay overlay-bg"></div>
        <div class="container">
            <div class="row fullscreen d-flex align-items-center justify-content-center">
                <div class="banner-content col-lg-12">
                    <h1 class="text-white">
                        <span>1500+</span> Jobs posted last week
                    </h1>


                        {{ form_start(form, {'attr': {'class': 'serach-form-area '}}) }}
                        <div class="row justify-content-center form-wrap">
                            <div class="col-lg-4 form-cols">
                                {{ form_widget(form.nom_entreprise ,{'attr': {'class': 'form-control'}}) }}
                            </div>

                            <div class="col-lg-3 form-cols">
                                <div class="default-select" id="default-selects">
                                {{ form_widget(form.Category ,{'attr': {'class': 'form-control'}}) }}

                            </div>
                        </div>

                        <div class="col-lg-3 form-cols">
                            <div class="default-select" id="default-selects2">
                                {{ form_widget(form.type_emploi ,{'attr': {'class': 'form-control'}}) }}

                            </div>

                        </div>

                        <div class="col-lg-2 form-cols">
                            {{ form_widget(form.rechercher,{'attr': {'class': 'btn btn-info lnr lnr-magnifier'}}) }}
                        </div>
                </div>
                {{ form_end(form) }}
                <p class="text-white"> <span>Search by tags:</span> Tecnology, Business, Consulting, IT Company, Design, Development</p>
            </div>
        </div>
        </div>
    </section>

    <section class="post-area section-gap">
        <div class="container">
            <div class="row justify-content-center d-flex">
                <div class="col-lg-8 post-list">

                    {% for offre in offre %}

                        <div class="single-post d-flex flex-row">

                            <div class="thumb">

                            </div>
                            <div class="details">
                                <div class="title d-flex flex-row justify-content-between">
                                    <div class="titles">
                                        <a href="{{ path('offre_show', {'id':offre.id}) }}"><h4>{{ offre.IntiuleDePost }}</h4></a>
                                        <h6>{{  offre.nomEntreprise }}</h6>
                                    </div>
                                    <ul class="btns">
                                        <li><a href="#"><span class="lnr lnr-heart"></span></a></li>
                                        <button type="button" class="btn btn-dark "  data-toggle="modal" data-target="#exampleModal">Apply</button>
                                    </ul>


                                </div>
                                <p>
                                    {{ offre.description }}
                                </p>


                                <h5>type job :{{offre.TypeEmploi.nom }}</h5>

                                <p class="address"><span class="lnr lnr-map"></span>  <strong>lieu</strong> : {{ offre.lieu }}</p>
                                <p class="address"><span class="lnr lnr-time"></span> {{ offre.publishedAt|date('Y-m-d') }}</p>
                                <p><strong>Category </strong>: {{ offre.Category.nom}}</p>





                            </div>
                        </div>

                    {% endfor %}


                </div>



                </div>
            </div>
        </div>
    </section>
    <!-- End post Area -->

    <!-- End banner Area -->
{% endblock %}

{% block title %}

{% endblock %}

